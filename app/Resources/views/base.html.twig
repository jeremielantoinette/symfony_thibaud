{{ include('pages/inc/header.html.twig') }}

 {% if app.session.flashBag.has('success') %}
     <div class=" container alert alert-success">
         {% for msg in app.session.flashBag.get('success') %}
             {{ msg }}
         {% endfor %}
     </div>
 {% endif %}
<div class="container">
    <h1 class="text-center" style="margin-bottom: 75px">Les articles</h1>
</div>

<div class="container">
    <div class="row">

        {% for post in posts  %}
        <div class="col-lg-3" style=" margin-bottom:25px; ">
            <div class="card">
                <img class="img-responsive img-thumbnail" src=""  />
                <div class="card-block" style="background-color: white">
                    <h4 class="card-title text-center">{{ post.title }}</h4>
                    <p class="card-text text-center">{{ post.description }}</p>
                    <div class="center-block"><a href="{{ absolute_url(asset('')) }}app_dev.php/view/{{ post.id }}" class="btn btn-primary  text-center">Lire</a></div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>
</div>
<div class="container">
    <div class="navigation text-center">
        {{ knp_pagination_render(posts) }}
    </div>
</div>
